# ── S2PX Environment Variables ──
# Copy this file to .env and fill in your values.

# ── Database (required) ──
DATABASE_URL="postgresql://user:password@localhost:5432/s2px"

# ── Google Cloud Storage (required for file uploads) ──
GCS_BUCKET="s2p-core-vault"

# ── Firebase (required — get from Firebase Console → Project Settings → Web app) ──
VITE_FIREBASE_API_KEY="your-firebase-api-key"
VITE_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
VITE_FIREBASE_PROJECT_ID="your-project-id"
VITE_FIREBASE_STORAGE_BUCKET="your-project.firebasestorage.app"
VITE_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
VITE_FIREBASE_APP_ID="your-app-id"

# ── AI (required for KB chat + AI editing) ──
GEMINI_API_KEY="your-gemini-api-key"

# ── Google Maps (required for address geocoding + distance calculation) ──
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ── Optional Integrations ──
# ANTHROPIC_API_KEY="your-anthropic-api-key"       # KB notebook extraction
# QBO_CLIENT_ID="your-qbo-client-id"               # QuickBooks Online OAuth2
# QBO_CLIENT_SECRET="your-qbo-client-secret"
# SENDGRID_API_KEY="your-sendgrid-api-key"          # Proposal email delivery
