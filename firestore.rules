rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Wiki pages â€” internal tool
    // Read: open (authenticated users via session, no Firebase Auth yet)
    // Write: require Firebase Auth when available, open for now with TODO
    match /wiki_pages/{pageId} {
      allow read: if true;
      // TODO: Lock writes to authenticated users once Firebase Auth is wired
      // allow write: if request.auth != null;
      allow write: if true;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
