{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist-server",
        "rootDir": ".",
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./shared/*"
            ]
        }
    },
    "include": [
        "server",
        "shared"
    ]
}
